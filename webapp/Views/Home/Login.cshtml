@{
    Layout = "dummy";
    ViewData["Title"] = "Login";
}
@model LoginViewModel


<h1 class="display-4">Welcome</h1>


<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 border p-4">

            <form asp-controller="Home" asp-action="Login" method="post" class="row g-3">
                <h4>Sign-In here</h4>
                <div class="col-md-12">
                    <label asp-for="Username" class="form-label">Username</label>
                    <input asp-for="Username" required class="form-control" placeholder="Enter the username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" type="password" required class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label class="form-check-label">Remember Me</label>
                </div>



                <div class="forgot-password col-md-6">
                    <a href="password_recovery.html">Forgot Password?</a>
                </div>


                

                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary">Sign-In</button>
                    
                </div>

                <div class="col-md-6">
                    <button type="reset" class="btn btn-primary">Cancel</button>
                 </div>

                <div class="col-md-12">
                    <p>Don't have an account yet? <a asp-controller="Home" asp-action="Signup">Create Account</a>

                </div>

                <div id="google_translate_element"></div>
                    
            </form>
        </div>
    </div>
</div>
<script type="text/javascript">
    function googleTranslateElementInit() {
        new google.translate.TranslateElement({ pageLanguage: 'en', layout: google.translate.TranslateElement.InlineLayout.SIMPLE }, 'google_translate_element');
    }
</script>
<script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
                    

